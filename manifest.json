{
  "name": "Leonardo Mod",
  "description": "Прогноз коэффициентов на крашах популярных сайтов при помощи нейронной сети.",
  "version": "1.0.0",
  "version_name": "1.0.0 (1.3.0 Leonardo)",
  "manifest_version": 2,
  "icons": {
    "16": "/img/icon-16x16.png",
    "32": "/img/icon-32x32.png",
    "48": "/img/icon-48x48.png",
    "120": "/img/icon-120x120.png",
    "144": "/img/icon-144x144.png",
    "150": "/img/icon-150x150.png",
    "192": "/img/icon-192x192.png"
  },
  "permissions": [ 
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "contextMenus",
    "https://*/*"
  ],
  "background": {
    "persistent": true,
    "scripts": ["/background.js"]
  },
  "browser_action": {
    "default_icon": "/img/icon-150x150.png",
    "default_popup": "/html/popup.html"
  },
  "incognito": "spanning"
}
